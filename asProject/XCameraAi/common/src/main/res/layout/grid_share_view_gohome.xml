<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="272dp"
    android:background="@color/c181818"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/share_dialog_title"
        android:layout_marginTop="22dp"
        android:textColor="@color/c505050"
        android:textSize="14sp" />


    <GridView
        android:id="@+id/gridViewShareChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="37dp"
        android:verticalSpacing="20dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/share_dialog_go_home"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/circle_corner_share_bg"
        android:text="@string/complete"
        android:textColor="@color/cFF6700"
        android:textSize="15sp" />
</LinearLayout>