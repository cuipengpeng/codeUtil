<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
   >
    <include layout="@layout/title"
        android:id="@+id/rl_todayFileListActivity_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <View
            android:id="@+id/v_todayFileListActivity_seperate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#363636"/>
        <TextView
            android:id="@+id/tv_todayFileListActivity_content"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/v_todayFileListActivity_seperate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:textSize="@dimen/dp15"
            android:text="@string/wondelfulTime"/>
        <LinearLayout
            android:id="@+id/ll_todayFileListActivity_selectAll"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/v_todayFileListActivity_seperate"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_todayFileListActivity_selectAll"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/video_file_selected" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="@string/checkAll"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_todayFileListActivity_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_todayFileListActivity_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:gravity="right|center_vertical"
            android:textColor="#686868"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="11dp"
            android:text="@string/tipForMakeVideo"/>
        <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_view"
        android:layout_below="@+id/tv_todayFileListActivity_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_todayFileListActivity_emptyData"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_todayFileListActivity_emptyDataImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/empty_data_today_wonderful"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_todayFileListActivity_emptyDataImg"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/dp14"
                android:textColor="#cccccc"
                android:text="@string/noWondelfulData"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bt_dialogbg_normal">
                <ProgressBar
                    android:id="@+id/progress1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_todayFileListActivity_loadingContent"
                    android:layout_below="@+id/progress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/dp14"
                    android:text="@string/loadingData"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
