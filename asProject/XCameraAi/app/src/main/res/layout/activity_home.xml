<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_171C28">


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_homeActivity_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_bottom_height_60dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/icon_home_bottom">

        <ImageView
            android:id="@+id/tv_home_page"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:src="@mipmap/tab_btn_home" />

        <ImageView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/publish" />

        <ImageView
            android:id="@+id/tv_personal"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="27dp"
            android:src="@mipmap/icon_myself_press" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/feed_rect" />


</RelativeLayout>
