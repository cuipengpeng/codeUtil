<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_111111">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="80dp"
            android:clipChildren="false">

            <RelativeLayout
                android:id="@+id/rl_goUpActivity_placeHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/iv_goUpActivity_noDataBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/disconnect_bottom_in_sidekey"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_goUpActivity_noDataTop"
                    android:layout_width="171dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/disconnect_top_in_sidekey"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <com.test.xcamera.widget.GalleryViewPager
                android:id="@+id/recy02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/communityHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/community_help"
                    android:textColor="#E0E0E0"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_go_up_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:src="@mipmap/icon_delete_white" />

            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_below="@+id/rl_drafts"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_phone_album"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bt_go_up_bg">

                    <TextView
                        android:id="@+id/tv_phone_album"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_go_up_album"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/my_album"
                        android:textColor="@color/color_e0e0e0"
                        android:textSize="@dimen/dp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_material_import"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_go_up_bg">

                    <TextView
                        android:id="@+id/tv_material_import"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_go_up_material_import"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/edit"
                        android:textColor="@color/color_e0e0e0"
                        android:textSize="@dimen/dp14" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_below="@+id/douyin"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bt_go_up_bg">

                <TextView
                    android:id="@+id/tv_carmera"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:drawableLeft="@mipmap/icon_goup_camera"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/camera"
                    android:textColor="@color/color_e0e0e0"
                    android:textSize="@dimen/dp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drafts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_below="@+id/rl_camera"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bt_go_up_bg"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_drafts"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:drawableLeft="@mipmap/icon_goup_drafts"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/drafts"
                    android:textColor="@color/color_e0e0e0"
                    android:textSize="@dimen/dp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_clip_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="40dp">

                <View
                    android:id="@+id/v_goUpActivity_colorBorder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_corner_color_border_normal_2dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/bt_go_up_bg">

                    <TextView
                        android:id="@+id/tv_clip_video"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dp20"
                        android:drawableLeft="@mipmap/icon_clip_video"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/clip_video"
                        android:textColor="@color/color_e0e0e0"
                        android:textSize="@dimen/dp14" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/douyin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_below="@+id/rl_clip_video"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bt_go_up_bg"
                android:visibility="visible">

                <TextView
                    android:id="@+id/douyin_tv_carmera"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:drawableLeft="@mipmap/douyin_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/douyin"
                    android:textColor="@color/color_e0e0e0"
                    android:textSize="@dimen/dp14" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bt_dialogbg_normal">

            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_goupActivvity_loadingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/loadingData"
                android:textSize="@dimen/dp14" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/usbFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <RelativeLayout
        android:id="@+id/hardwareInfoTips"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp20"
        android:background="#252528"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_feedFragment_hardwareUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_feedFragment_hardwareInfo"
            android:background="@drawable/bt_up_hardware_checkl"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="@string/check"
            android:textColor="@color/white"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/tv_feedFragment_hardwareInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="@dimen/dp15"
            android:singleLine="true"
            android:text="@string/have_new_room"
            android:textColor="@color/white"
            android:textSize="@dimen/dp12" />

        <ImageView
            android:id="@+id/iv_feedFragment_deleteHardwareUpdate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:padding="5dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

</FrameLayout>
