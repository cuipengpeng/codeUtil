<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fpv_second_view_width_60dp"
    android:layout_height="match_parent"
    android:background="@color/color_181818"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/preview_slowmotion_wrap_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/preview_slowmotion_3"
            style="@style/params_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rotation="-90"
            android:tag="8"
            android:text="@string/fpv_slowmotion_bei_lv_8x" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/preview_slowmotion_wrap_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/preview_slowmotion_2"
            style="@style/params_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rotation="-90"
            android:tag="4"
            android:text="@string/fpv_slowmotion_bei_lv_4x" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/preview_slowmotion_wrap_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/preview_slowmotion_1"
            style="@style/params_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rotation="-90"
            android:tag="2"
            android:text="@string/fpv_slowmotion_bei_lv_2x" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/params_title_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:rotation="-90"
            android:text="@string/fpv_slowmotion_bei_lv" />
    </RelativeLayout>
</LinearLayout>