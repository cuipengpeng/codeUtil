<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dy_fpv_common_dialog_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000">

    <RelativeLayout
        android:id="@+id/dy_fpv_common_dialog_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/dy_fpv_common_dialog_bg">

        <RelativeLayout
            android:id="@+id/dy_fpv_common_dialog_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.test.xcamera.view.VerticalTextView
                android:id="@+id/dy_fpv_common_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:direction="uptodown" />

            <com.test.xcamera.view.VerticalTextView
                android:id="@+id/dy_fpv_common_dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:direction="uptodown" />

            <com.test.xcamera.view.VerticalTextView
                android:id="@+id/dy_fpv_common_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dy_fpv_common_dialog_confirm"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="12dp"
                app:direction="uptodown" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dy_fpv_common_dialog_compress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <com.test.xcamera.view.VerticalTextView
                android:id="@+id/dy_fpv_common_dialog_compress_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:direction="uptodown" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>