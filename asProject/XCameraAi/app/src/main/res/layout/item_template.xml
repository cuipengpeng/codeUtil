<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_videoTemplete_itemRoot"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/tv_item_videoTemplete_use"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/use"
        android:textSize="14sp"
        android:textColor="@color/appThemeColor"
        android:background="@drawable/circle_corner_red_border_bg"/>

    <ImageView
        android:id="@+id/iv_item_videoTemplete_head"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:background="@mipmap/zhanweitu"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_template_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_videoTemplete_head"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/iv_item_videoTemplete_head"
        android:text="模板名称121"
        android:textColor="@color/white"
        android:textSize="@dimen/dp15" />

    <RelativeLayout
        android:id="@+id/rl_item_videoTemplete_segments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_template_title"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_item_videoTemplete_head"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_item_videoTemplete_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="10s"
            android:textColor="@color/color_555658"
            android:textSize="@dimen/dp12" />

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp1"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/tv_item_videoTemplete_time"
            android:background="@color/color_555658"></View>

        <TextView
            android:id="@+id/tv_item_videoTemplete_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view1"
            android:paddingRight="8dp"
            android:text="10段"
            android:textColor="@color/color_555658"
            android:textSize="@dimen/dp12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_template_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_item_videoTemplete_segments"
        android:lines="1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_item_videoTemplete_head"
        android:layout_toLeftOf="@id/tv_item_videoTemplete_use"
        android:maxLines="2"
        android:text="Have a  nice weekend美妆生活Have a  nice weekend美妆生活Have a  nice weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活weekend美妆生活"
        android:textColor="#909090"
        android:textSize="@dimen/dp10"
        android:visibility="gone"/>


</RelativeLayout>
