<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingTop="15dp"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/rl_galleryItem_itemView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.test.xcamera.widget.RoundImageView
        android:id="@+id/captionStyleAssetCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:x_radius="6dp"
        app:y_radius="6dp" />

    <View
        android:id="@+id/selectedItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border_animatesticker_selected" />

    <TextView
        android:id="@+id/captionStyleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/captionStyleAssetCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp12" />
    </RelativeLayout>
</RelativeLayout>
