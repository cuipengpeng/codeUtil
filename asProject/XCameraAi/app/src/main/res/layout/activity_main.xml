<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_code"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#ccc"
            android:hint="请输入验证码"
          />
    <TextView
        android:id="@+id/tv_code1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"

        android:background="#ccc"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_code2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="获取激活码"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />
    <TextView
        android:id="@+id/tv_code3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="通知云端激活码写入成功"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />
    <TextView
        android:id="@+id/tv_code4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="app版本上报"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />

    <TextView
        android:id="@+id/tv_code5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="app升级包下载"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/progress"
        android:layout_marginTop="50dp"
        android:layout_width="280dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="已下载 0 %"/>


    <TextView
        android:id="@+id/tv_code6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="固件版本上报"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />

    <TextView
        android:id="@+id/tv_code7"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="固件版本下载"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ccc"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/hard_progress"
        android:layout_marginTop="50dp"
        android:layout_width="280dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_hardtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="已下载 0 %"/>
   </LinearLayout>

</ScrollView>