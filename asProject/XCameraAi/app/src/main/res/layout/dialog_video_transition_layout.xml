<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_myVideoEditActivity_dialog_exitEdit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="应用到所有片段"
        android:textColor="#ffffff"
        android:background="@drawable/circle_corner_green_bg_normal_2dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_myVideoEditActivity_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#000000"
        android:background="@drawable/circle_corner_white_bg_normal_2dp"
        android:textSize="18sp" />
</LinearLayout>