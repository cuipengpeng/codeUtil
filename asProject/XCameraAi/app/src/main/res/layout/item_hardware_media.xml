<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bank_thumbnail_local" />

    <TextView
        android:id="@+id/tv_media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:textColor="#a1a1"
        android:textSize="10dp"
        android:layout_marginLeft="5dp"
        />
    <!--   android:drawablePadding="3dp"-->
    <!-- android:drawableLeft="@mipmap/videocam_material"-->
    <!--android:drawableStart="@mipmap/videocam_material" -->

    <ImageView
        android:id="@+id/is_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/alpha60_black"
        />

    <RelativeLayout
        android:id="@+id/item_media_hideLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!--中间选中的数字-->
        <TextView
            android:id="@+id/tv_selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/ffffffff"
            android:textSize="21sp" />


        <ImageView
            android:id="@+id/is_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/picture_selected"
            android:padding="5dp"
            />
    </RelativeLayout>




</FrameLayout>
