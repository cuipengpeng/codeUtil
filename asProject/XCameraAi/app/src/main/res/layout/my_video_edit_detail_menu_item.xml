<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_albumActivity_dragItem_itemView"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@color/color_181818">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <ImageView
            android:id="@+id/iv_myVideoEditDetailActivity_item_img"
            android:layout_width="@dimen/videoEditDetail_feature_imgHeight_24dp"
            android:layout_height="@dimen/videoEditDetail_feature_imgHeight_24dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_myVideoEditDetailActivity_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_myVideoEditDetailActivity_item_img"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/iv_myVideoEditDetailActivity_item_changedPoint"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_below="@id/tv_myVideoEditDetailActivity_item_name"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:background="#ff7700"
            android:visibility="gone"/>
    </RelativeLayout>


</RelativeLayout>