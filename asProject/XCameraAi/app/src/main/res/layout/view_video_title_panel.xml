<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_181818"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/mVideoComCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/icon_video_com_caption"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="组合标题"
        android:textColor="#5a5a5a"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/mVideoTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/icon_video_sticker"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="标签"
        android:textColor="#5a5a5a"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/mVideoAnimatedSticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/icon_video_sticker"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="贴纸"
        android:textColor="#5a5a5a"
        android:textSize="10sp"
        />
</LinearLayout>
