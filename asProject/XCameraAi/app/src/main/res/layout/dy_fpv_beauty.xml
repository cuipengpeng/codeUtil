<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dy_fpv_beauty_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dy_fpv_beauty_choose_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dy_fpv_beauty_skin_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dy_fpv_beauty_skin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:rotation="90"
                    android:text="@string/dy_beauty_skin"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/dy_fpv_beauty_skin_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dy_fpv_beauty_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_dy_beauty_skin"
                        android:rotation="90" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dy_fpv_beauty_face_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dy_fpv_beauty_face_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:rotation="90"
                    android:text="@string/dy_beauty_face"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/dy_fpv_beauty_face_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dy_fpv_beauty_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_dy_beauty_face"
                        android:rotation="90" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dy_fpv_beauty_eye_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dy_fpv_beauty_eye_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:rotation="90"
                    android:text="@string/dy_beauty_eyes"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/dy_fpv_beauty_eye_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dy_fpv_beauty_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_dy_beauty_eyes"
                        android:rotation="90" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dy_fpv_beauty_rouge_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dy_fpv_beauty_rouge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:rotation="90"
                    android:text="@string/dy_beauty_lipstick"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/dy_fpv_beauty_rouge_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dy_fpv_beauty_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_dy_beauty_rouge"
                        android:rotation="90" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dy_fpv_beauty_blush_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dy_fpv_beauty_blush_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:gravity="center_vertical"
                    android:rotation="90"
                    android:text="@string/dy_beauty_blusher"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/dy_fpv_beauty_blush_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dy_fpv_beauty_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_dy_beauty_blush"
                        android:rotation="90" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dy_fpv_beauty_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@mipmap/icon_dy_props_clear_light"
                android:rotation="90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:rotation="90"
                android:text="@string/dy_beauty_two"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fy_fpv_beauty_seekbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/dy_fpv_beauty_choose_layout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/dy_fpv_beauty_reset_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <com.test.xcamera.dymode.view.VerticalSeekBarWrapper
                android:id="@+id/dy_fpv_beauty_seekbar_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.test.xcamera.dymode.view.VerticalSeekBar
                    android:id="@+id/dy_fpv_beauty_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:splitTrack="false" />
            </com.test.xcamera.dymode.view.VerticalSeekBarWrapper>

            <com.test.xcamera.view.VerticalTextView
                android:id="@+id/dy_fpv_beauty_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12"
                app:direction="uptodown" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/dy_fpv_beauty_reset_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/dy_fpv_beauty_reset_bg"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/icon_beauty_reset" />

            <com.test.xcamera.view.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dy_beauty_reset"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:direction="uptodown" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/fy_fpv_beauty_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fy_fpv_beauty_seekbar_layout" />
</RelativeLayout>