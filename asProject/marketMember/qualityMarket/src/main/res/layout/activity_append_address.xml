<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe0e0e0" >

    <!-- 新增地址页面 -->
    <LinearLayout
        android:id="@+id/title_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <include layout="@layout/title_back"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_eeeeee" />
    </LinearLayout>
    <View
        android:id="@+id/append_address_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_address"
        android:layout_marginTop="5dp"
        android:background="#ffdddddd" />

    <LinearLayout
        android:id="@+id/append_address_linear1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view1"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/append_address_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:hint="姓名"
            android:maxLength="10"
            android:textColor="#ff333333"
            android:textColorHint="#ff999999"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/append_address_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/append_address_linear1"
        android:background="#ffdddddd" />

    <LinearLayout
        android:id="@+id/append_address_linear2"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view2"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/append_address_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:hint="手机号码"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textColor="#ff333333"
            android:textColorHint="#ff999999"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/append_address_view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/append_address_linear2"
        android:background="#ffdddddd" />

    <RelativeLayout
        android:id="@+id/append_address_rl_area"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view3"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/append_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区信息"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/append_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/right_arrow"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="请选择 "
            android:textColor="#ff999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/append_address_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/append_textview2"
            android:layout_toRightOf="@id/append_textview1"
            android:gravity="right|center_vertical"
            android:textColorHint="#ff333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/append_address_view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/append_address_rl_area"
        android:background="#ffdddddd" />

    <LinearLayout
        android:id="@+id/append_address_linear3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view4"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/append_address_et_detailedness_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:hint="如街道、门牌号、楼层及房间号"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textColorHint="#ff999999"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/append_address_view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/append_address_linear3"
        android:background="#ffdddddd" />

    
<RelativeLayout
        android:id="@+id/append_address_rl_label"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view5"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/append_textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址标签"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/append_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/right_arrow"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="请选择 "
            android:textColor="#ff999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/append_address_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/append_textview3"
            android:layout_toRightOf="@id/append_textview4"
            android:gravity="right|center_vertical"
            android:textColorHint="#ff333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/append_address_view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/append_address_rl_label"
        android:background="#ffdddddd" />


<RelativeLayout
        android:id="@+id/rl_appendAddressActivity_verifyCode"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/append_address_view6"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tv_appendAddressActivity_verifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="注册手机验证码"
            android:textColor="#ff333333"
            android:textSize="15sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tv_appendAddressActivity_verifyCode"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_appendAddressActivity_verifyCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_corner_gray_border_bg"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:hint="输入短信验证码"
            android:maxLength="6"
            android:paddingLeft="@dimen/loginActivity_marginLeftAndRight"
            android:phoneNumber="true"
            android:textColor="#ff333333"
            android:textColorHint="#ff999999"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_appendAddressActivity_getVerifyCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/append_image1"
        android:layout_below="@id/rl_appendAddressActivity_verifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/tishi"/>

    <TextView
        android:id="@+id/append_text1"
        android:layout_toRightOf="@id/append_image1"
        android:layout_below="@id/rl_appendAddressActivity_verifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:lineSpacingExtra="8dp"
        android:text="请填写真实的收货地址，以免影响您的正常收货，对于地址不详的订单万卡商城有权拒单" />



    <Button
        android:id="@+id/append_address_btn_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="@dimen/loginActivity_button_textSize" />

</RelativeLayout>