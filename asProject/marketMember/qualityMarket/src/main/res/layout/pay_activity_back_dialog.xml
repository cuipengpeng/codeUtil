<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_corner_white_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_payActivity_invoiceProtocalTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="6dp"
        android:gravity="center"
        android:maxLines="100000"
        android:text="确认要离开收银台?"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_payActivity_invoiceProtocalContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:maxLines="12"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="下单后未在规定时间内完成支付，订单将被取消，请尽快完成支付"
        android:textColor="#333333"
        android:textSize="16sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >
    
    <Button
        android:id="@+id/tv_payActivity_goOnPay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/circle_corner_left_down_white_bg"
        android:text="继续支付"
        android:textColor="#333333"
        android:textSize="16sp" />
    <Button
        android:id="@+id/tv_payActivity_leave"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/circle_corner_right_down_red_bg"
        android:text="确认离开"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

</LinearLayout>
</LinearLayout>