<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5" >

    <!-- 手机验证页面 -->

    <!-- <View
        android:id="@+id/jinpo_authorization_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ffdddddd" /> -->
    
        <TextView
            android:id="@+id/jinpo_authorization_text1"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingLeft="15dp"
            android:text="社保授权有助于您获得更高的信用额度"
            android:textColor="#ffffb812"
            android:textSize="12sp" 
            android:gravity="center_vertical"
            android:background="#11ffb812"/>

        <View style="@style/LineView"
            android:id="@+id/jinpo_authorization_view1"
               android:layout_below="@id/jinpo_authorization_text1"
               android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:id="@+id/jinpo_authorization_rl_code"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/jinpo_authorization_view1"
        android:background="#ffffffff"
        android:paddingLeft="30dp"
        android:paddingRight="15dp" 
        android:visibility="gone">

        <TextView
            android:id="@+id/jinpo_authorization_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="社保卡号"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jinpo_authorization_et_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入您的社保卡号"
            android:layout_toRightOf="@id/jinpo_authorization_textview1"
            android:layout_marginLeft="15dp"
            android:maxLength="18"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="#ff333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/jinpo_authorization_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/jinpo_authorization_rl_code"
        android:background="#ffdddddd" />

    <RelativeLayout
        android:id="@+id/jinpo_authorization_rl_passwrord"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/jinpo_authorization_view2"
        android:background="#ffffffff"
        android:paddingLeft="30dp"
        android:paddingRight="15dp" 
        android:visibility="gone">

        <TextView
            android:id="@+id/jinpo_authorization_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码       "
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jinpo_authorization_et_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/jinpo_authorization_textview2"
            android:layout_marginLeft="15dp"
            android:hint="请输入社保登录密码"
            android:maxLength="20"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="#ff333333"
            android:textSize="14sp" />
    </RelativeLayout>
     <View
        android:id="@+id/jinpo_authorization_view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/jinpo_authorization_rl_passwrord"
        android:background="#ffdddddd" />
    <RelativeLayout
        android:id="@+id/jinpo_authorization_rl_number"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/jinpo_authorization_view4"
        android:background="#ffffffff"
        android:paddingLeft="30dp"
        android:paddingRight="15dp" 
        android:visibility="gone">

        <TextView
            android:id="@+id/jinpo_authorization_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个人编号"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jinpo_authorization_et_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/jinpo_authorization_textview3"
            android:layout_marginLeft="15dp"
            android:hint="请输入个人编号"
            android:maxLength="12"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="#ff333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/jinpo_authorization_view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/jinpo_authorization_rl_number"
        android:background="#ffdddddd" />


    <!-- <TextView
        android:id="@+id/jinpo_authorization_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/jinpo_authorization_btn_submit"
        android:layout_alignLeft="@id/jinpo_authorization_btn_submit"
        android:layout_below="@id/jinpo_authorization_view5"
        android:layout_marginBottom="15dp"
        android:text="关于运营商服务密码的一些知识"
        android:textColor="#ff999999"
        android:textSize="12sp" /> -->

    <Button
        android:id="@+id/jinpo_authorization_btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/jinpo_authorization_view3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_page_button_disabled"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/loginActivity_button_textSize" />
    
    <TextView
        android:id="@+id/jinpo_authorization_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jinpo_authorization_btn_next"
        android:layout_marginBottom="15dp"
        android:text="社保查询密码是什么？\n社保查询密码是参保人员在查询社保卡账户余额时所需要的密码。\n\n如何找回社保查询密码？\n方法一、拨打社保局服务电话12333。\n方法二、通过人力资源和社会保障局官方网站个人查询模块点击“忘记密码”通过个人设置的密保问题找回密码。\n方法三、凭社保卡和本人有效身份证件到合作银行营业网点办理密码重置手续。"
        android:textColor="#ff999999"
        android:textSize="12sp" 
        android:layout_margin="30dp"/>

</RelativeLayout>