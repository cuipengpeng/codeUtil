<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff" >

    <!-- 我的收货地址的item -->

    <RelativeLayout
        android:id="@+id/contain_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/receiving_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="隔壁老黄隔壁老黄"
            android:ellipsize="end"
            android:maxEms="5"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/receiving_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"

            android:text="13714345678"
            android:textColor="#ff333333"
            android:textSize="15sp" />
     <TextView
        android:id="@+id/contain_delete_btn_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/label"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="10sp"
         android:gravity="center"
         android:layout_alignParentRight="true"
        android:layout_alignTop="@id/receiving_tv_phone"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/receiving_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiving_tv_name"
            android:layout_marginTop="10dp"
            android:text="显示收藏地址"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>