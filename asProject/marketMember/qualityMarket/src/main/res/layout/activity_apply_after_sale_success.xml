<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/title_back"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_applyAfterSaleSuccessActivity_applySuccess"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@drawable/apply_after_sale_success" />

        <TextView
            android:id="@+id/tv_applyAfterSaleSuccessActivity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_applyAfterSaleSuccessActivity_applySuccess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="申请售后服务成功啦，请等待商家审核!"
            android:textColor="#333333"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_applyAfterSaleSuccessActivity_queryProgress"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_alignLeft="@id/tv_applyAfterSaleSuccessActivity_description"
            android:layout_below="@id/tv_applyAfterSaleSuccessActivity_description"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_page_button_disabled"
            android:gravity="center"
            android:text="进度查询"
            android:textColor="#ffffff"
            android:textSize="@dimen/loginActivity_button_textSize" />

        <Button
            android:id="@+id/btn_applyAfterSaleSuccessActivity_indexPageOfAfterSale"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_alignRight="@id/tv_applyAfterSaleSuccessActivity_description"
            android:layout_below="@id/tv_applyAfterSaleSuccessActivity_description"
            android:layout_marginBottom="95dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="售后首页"
            android:textColor="#ffffff"
            android:textSize="@dimen/loginActivity_button_textSize" />

    </RelativeLayout>
</LinearLayout>