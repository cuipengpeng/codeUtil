<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5"
    android:orientation="vertical" >

    <!-- 我的认证和激活白条页面 -->

    <include layout="@layout/title_back"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_eeeeee" />
    <View
        style="@style/LineView"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/my_authentication_ll_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="基本资料"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <View style="@style/LineView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/my_authentication_ll_autonym"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/my_authentication_iv_autonym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shim_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="实名认证"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_authentication_tv_autonym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="提交"
                    android:textColor="#ff79c5f9"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                style="@style/LineView"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/my_authentication_ll_material"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                      android:id="@+id/my_authentication_iv_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/geren_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="个人资料"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_authentication_tv_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="提交"
                    android:textColor="#ff79c5f9"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                style="@style/LineView"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/my_authentication_ll_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                        android:id="@+id/my_authentication_iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bangd_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="绑定手机"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_authentication_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="提交"
                    android:textColor="#ff79c5f9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/LineView"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/my_authentication_tv_credit_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="极速授信"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View style="@style/LineView" />

    <RelativeLayout
        android:id="@+id/my_authentication_rl_sesame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:paddingLeft="10dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/my_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/zhima" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_image1"
            android:text="芝麻信用分"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_authentication_tv_sesame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="去授权"
            android:textColor="#ff79c5f9"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:id="@+id/my_authentication_rl_credit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:paddingLeft="10dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/my_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/xinyongk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_image2"
            android:text="信用卡受权"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_authentication_tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="去授权"
            android:textColor="#ff79c5f9"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/LineView" android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/my_authentication_rl_jinpo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:paddingLeft="10dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/my_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/sheb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_image3"
            android:text="社保授权"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_authentication_tv_jinpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="去授权"
            android:textColor="#ff79c5f9"
            android:textSize="12sp" />
 <!-- 79c5f9 -->
    </RelativeLayout>

    <View style="@style/LineView" />

    <TextView
        android:id="@+id/my_authentication_tv_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="已提交审核，稍后会有万卡商城工作人员致电您核实相关信息，请保持电话通畅。"
        android:textColor="#ff999999"
        android:textSize="10sp"
        android:layout_marginTop="15dp"/>

</LinearLayout>