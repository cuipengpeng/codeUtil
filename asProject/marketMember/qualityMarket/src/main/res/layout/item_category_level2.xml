<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_categoryFragment_categoryLevel2Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/transparent">

        <View
            android:layout_width="44dp"
            android:layout_height="0.5dp"
            android:background="#d7d7d7"
            android:layout_marginTop="19dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_categoryFragment_categoryLevel2LableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="手机"
            android:textColor="@color/app_textView_textColor"
            android:textSize="@dimen/categoryFragment_textSize" />


        <View
            android:layout_width="44dp"
            android:layout_height="0.5dp"
            android:background="#d7d7d7"
            android:layout_marginTop="19dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <com.jfbank.qualitymarket.widget.NoScrollGridView
        android:id="@+id/gv_categoryFragment_categoryLevel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/ll_categoryFragment_categoryLevel2Title"
        android:background="@color/transparent"
        android:horizontalSpacing="0.5dp"
        android:verticalSpacing="0.5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:numColumns="3">

    </com.jfbank.qualitymarket.widget.NoScrollGridView>


</RelativeLayout>
