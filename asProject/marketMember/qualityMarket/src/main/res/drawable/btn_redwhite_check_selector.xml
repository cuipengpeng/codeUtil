<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="2dp"></corners>
            <solid android:color="@color/c_F7F7F7"></solid>
            <stroke android:width="0.5dp" android:color="@color/themeRed"></stroke>
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="false" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="2dp"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="0.5dp" android:color="@color/themeRed"></stroke>
        </shape>
    </item>
    <item android:state_checked="false"  android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="2dp"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="0.5dp" android:color="@color/c_999999"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="2dp"></corners>
            <solid android:color="@color/c_e9e9e9"></solid>
        </shape>
    </item>
</selector>