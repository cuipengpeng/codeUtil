<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<com.hospital.checkup.widget.RegionImageView
    android:id="@+id/iv_measureHomeActivity_body"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:scaleType="fitXY"
    android:src="@mipmap/measure_body"
    android:background="@drawable/circle_corner_gray_border_normal_2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量被试"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>

            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_addMeasurer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_measureHomeActivity_measurerName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#707070"
                    android:textSize="@dimen/appContentTextSize_15sp"/>
                <ImageView
                    android:id="@+id/iv_measureHomeActivity_addMeasurer"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/add"/>
            </LinearLayout>

        </RelativeLayout>

        <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量部位"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_measureBodyArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_measureHomeActivity_measureBodyArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="..."
                    android:textColor="#707070"
                    android:textSize="@dimen/appContentTextSize_15sp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_down"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量内容"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_measureContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_measureHomeActivity_measureContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="..."
                android:textColor="#707070"
                android:textSize="@dimen/appContentTextSize_15sp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_down"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>
        <RelativeLayout
            android:id="@+id/rl_measureHomeActivity_measureLeftOrRight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="关节左右"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_measureLeftOrRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_measureHomeActivity_measureLeftOrRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#707070"
                android:textSize="@dimen/appContentTextSize_15sp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_down"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量医师"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>

            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_addDoctor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_measureHomeActivity_doctorName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#707070"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <ImageView
                android:id="@+id/iv_measureHomeActivity_addDoctor"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/add" />
            </LinearLayout>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>
        <Button
            android:id="@+id/btn_measureHomeActivity_measure"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:text="测量"
            android:textColor="#ffffff"
            android:textSize="@dimen/appTitleTextSize_18sp"
            android:background="@drawable/circle_corner_blue_bg_normal_2dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>