<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<com.hospital.checkup.widget.RegionImageView
    android:id="@+id/iv_measureHomeActivity_body"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:src="@mipmap/measure_body"
    android:background="@drawable/circle_corner_gray_border_normal_2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量被试"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>

            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_addMeasurer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_measureHomeActivity_measurerName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#707070"
                    android:textSize="@dimen/appContentTextSize_15sp"/>
                <ImageView
                    android:id="@+id/iv_measureHomeActivity_addMeasurer"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/add"/>
            </LinearLayout>

        </RelativeLayout>

        <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量部位"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_measureBodyArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_measureHomeActivity_measureBodyArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="腿部"
                    android:textColor="#707070"
                    android:textSize="@dimen/appContentTextSize_15sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量内容"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_measureContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_measureHomeActivity_measureContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#707070"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="测量医师"
                android:textColor="#000000"
                android:textSize="@dimen/appContentTextSize_15sp"/>

            <LinearLayout
                android:id="@+id/ll_measureHomeActivity_addDoctor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_measureHomeActivity_doctorName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#707070"
                android:textSize="@dimen/appContentTextSize_15sp"/>
            <ImageView
                android:id="@+id/iv_measureHomeActivity_addDoctor"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/add" />
            </LinearLayout>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_measureHomeActivity_measure"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:text="测量"
        android:textColor="#ffffff"
        android:textSize="@dimen/appTitleTextSize_18sp"
        android:background="@drawable/circle_corner_blue_bg_normal_2dp"/>
</LinearLayout>