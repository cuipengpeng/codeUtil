<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <RelativeLayout
        android:id="@+id/rl_item_testerDetailActivity_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_item_testerDetailActivity_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="1"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_item_testerDetailActivity_testName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_item_testerDetailActivity_index"
            android:layout_toRightOf="@id/tv_item_testerDetailActivity_index"
            android:gravity="center_vertical"
            android:text="测量001"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_item_testerDetailActivity_doctorName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="张医生"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/tv_item_testerDetailActivity_showChart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@mipmap/arrow_down" />
        <TextView
            android:id="@+id/tv_item_testerDetailActivity_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_item_testerDetailActivity_showChart"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2017/5/23"
            android:textSize="14sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_testerDetailActivity_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_item_testerDetailActivity_title"
        android:background="@drawable/circle_corner_gray_border_normal_2dp"/>
</RelativeLayout>