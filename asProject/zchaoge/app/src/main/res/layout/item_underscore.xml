<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_73dp"
    android:layout_height="@dimen/_70dp"
    android:layout_marginEnd="@dimen/_2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.othershe.library.NiceImageView
            android:id="@+id/img_itemUnderscore_image"
            android:layout_width="@dimen/_65dp"
            android:layout_height="@dimen/_65dp"
            android:gravity="center"
            android:scaleType="fitXY"
            app:corner_radius="@dimen/_3dp" />

        <ImageView
            android:id="@+id/img_itemUnderscore_play"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_28dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            />


        <ImageView
            android:id="@+id/img_itemUnderscore_state"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/im_download" />

        <ImageView
            android:id="@+id/img_itemUnderscore_progress"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_load_line"
            android:visibility="gone" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_itemUnderscore_select"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/im_selected"
        android:visibility="invisible" />


</RelativeLayout>
