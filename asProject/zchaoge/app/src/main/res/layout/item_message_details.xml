<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_msgDetails_icon"
        android:layout_width="@dimen/_52dp"
        android:layout_height="@dimen/_52dp"
        android:layout_marginStart="@dimen/_11dp"
        android:layout_marginTop="@dimen/_15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_toEndOf="@id/img_msgDetails_icon"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_msgDetails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_msgDetails_msg"
            android:layout_width="@dimen/_200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/tv_msgDetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:textColor="@color/describeTextColor"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_msgDetails_cover"
        android:layout_width="@dimen/_51dp"
        android:layout_height="@dimen/_72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_18dp"
        android:layout_marginTop="@dimen/_15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_welcome"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_msgDetails_attention"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@drawable/selector_btn_fans"
        android:text="关注"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp"
        android:visibility="gone" />


</RelativeLayout>
