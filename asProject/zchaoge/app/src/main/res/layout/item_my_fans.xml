<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_myFansActivity_item_follow"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/_11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="关注"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_corner_pink_selector_5dp"/>

        <com.caishi.chaoge.ui.widget.CircleImageView
            android:id="@+id/iv_myFansActivity_item_profile"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="@dimen/_11dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_myFansActivity_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_myFansActivity_item_profile"
            android:text="哈哈哈"
            android:layout_toLeftOf="@id/btn_myFansActivity_item_follow"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_myFansActivity_item_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_myFansActivity_item_profile"
            android:layout_below="@id/tv_myFansActivity_item_username"
            android:layout_toLeftOf="@id/btn_myFansActivity_item_follow"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="09-18 13:22"
            android:textColor="@color/describeTextColor"
            android:textSize="@dimen/_13sp" />

    </RelativeLayout>

</LinearLayout>
