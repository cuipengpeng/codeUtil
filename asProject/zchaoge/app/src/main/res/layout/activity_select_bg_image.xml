<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_SelectBgImage_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        app:tl_indicator_color="@color/_fe5175"
        app:tl_indicator_corner_radius="@dimen/_4dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="@dimen/_2dp"
        app:tl_indicator_margin_bottom="@dimen/_5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="@color/_fe5175"
        app:tl_textUnselectColor="@color/colorBlack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_SelectBgImage_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/partingLineBgColor" />

        <ImageView
            android:id="@+id/img_SelectBgImage_album"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_72dp"
            android:src="@drawable/im_album" />

        <ImageView
            android:id="@+id/img_SelectBgImage_photo"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_12dp"
            android:src="@drawable/im_photo"

            />


    </RelativeLayout>


</LinearLayout>

