<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/img_dialogWay_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_63dp"
        android:text="选择一个创作方式"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_23sp" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_dialogWay_read"
            android:layout_width="@dimen/_176dp"
            android:layout_height="@dimen/_94dp"
            android:src="@drawable/im_wenzilangdu"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/img_dialogWay_dub"
            android:layout_width="@dimen/_132dp"
            android:layout_height="@dimen/_94dp"
            android:layout_marginStart="@dimen/_8dp"
            android:src="@drawable/im_shipinpeiyin"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_dialogWay_close"
        android:layout_width="@dimen/_33dp"
        android:layout_height="@dimen/_33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25dp"
        android:src="@drawable/ic_close_pattern" />


</RelativeLayout>