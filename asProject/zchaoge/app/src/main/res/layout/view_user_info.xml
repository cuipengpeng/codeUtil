<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_140dp"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_userDetails_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sp"
            android:text="userName"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/tv_userDetails_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:text="userId"
            android:textSize="@dimen/_12sp" />
        <LinearLayout
            android:id="@+id/ll_userDetails_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_userDetails_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:textColor="@color/describeTextColor"
            android:text="userSigned"
            android:textSize="@dimen/_14sp" />



        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginTop="@dimen/_8dp"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userDetails_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12dp"
                android:text="获赞"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sp"

                />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_userDetailsActivity_myFollow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_userDetails_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="关注"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userDetailsActivity_myFans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_userDetails_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="粉丝"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"

                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="@dimen/_110dp"
        android:paddingEnd="@dimen/_13dp"
        android:paddingStart="@dimen/_16dp">

        <LinearLayout
            android:id="@+id/ll_userDetails_userPhoto"
            android:layout_width="@dimen/_90dp"
            android:layout_height="@dimen/_90dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_head_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_userDetails_userPhoto"
                android:layout_width="@dimen/_82dp"
                android:layout_height="@dimen/_82dp"
                android:src="@drawable/ic_logo" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_userDetails_inAttention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_userDetails_userPhoto"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/ll_userDetails_more"
                android:layout_width="@dimen/_31dp"
                android:layout_height="@dimen/_31dp"
                android:layout_marginStart="@dimen/_7dp"
                android:background="@drawable/shape_bg_mine_btn"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:src="@drawable/ic_unfollow" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_userDetails_share"
                android:layout_width="@dimen/_99dp"
                android:layout_height="@dimen/_31dp"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/shape_bg_mine_btn"
                android:drawableStart="@drawable/ic_mine_share"
                android:gravity="center"
                android:paddingStart="@dimen/_8dp"
                android:text="分享主页"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_userDetails_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ll_userDetails_userPhoto"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_userDetails_attention"
                android:layout_width="@dimen/_99dp"
                android:layout_height="@dimen/_31dp"
                android:background="@drawable/shape_bg_item_msg"
                android:paddingStart="@dimen/_28dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/str_attention"
                android:drawableStart="@drawable/ic_attention1"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:id="@+id/ll_userDetails_share"
                android:layout_width="@dimen/_31dp"
                android:layout_height="@dimen/_31dp"
                android:layout_marginStart="@dimen/_7dp"
                android:background="@drawable/shape_bg_mine_btn"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:src="@drawable/ic_mine_share" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>