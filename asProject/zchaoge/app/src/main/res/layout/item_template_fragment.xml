<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120dp"
    android:background="@color/white"
    android:layout_height="@dimen/_212dp">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8dp"
        android:background="@color/white" />

    <com.othershe.library.NiceImageView
        android:id="@+id/img_templateFragment_cover"
        android:layout_width="@dimen/_110dp"
        android:layout_height="@dimen/_202dp"
        android:layout_below="@id/view1"
        app:corner_radius="@dimen/_5dp"
        android:scaleType="fitXY"
        app:is_circle="false" />

    <View
        android:layout_width="@dimen/_9dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/img_templateFragment_state"
        android:layout_width="@dimen/_21dp"
        android:layout_height="@dimen/_21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_6dp"
        android:src="@drawable/ic_selected"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_14dp" />


</RelativeLayout>

