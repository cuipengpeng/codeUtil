<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_70dp"
    android:layout_height="@dimen/_70dp"
    android:layout_marginEnd="@dimen/_2dp"
    android:layout_marginStart="@dimen/_4dp">

    <RelativeLayout
        android:layout_width="@dimen/_67dp"
        android:layout_height="@dimen/_67dp"
        android:layout_alignParentBottom="true">


        <com.othershe.library.NiceImageView
            android:id="@+id/img_itemTemplate_image"
            android:layout_width="@dimen/_67dp"
            android:layout_height="@dimen/_67dp"
            android:gravity="center"
            android:scaleType="fitXY"
            app:border_color="@color/white"
            app:border_width="@dimen/_2dp"
            app:corner_radius="@dimen/_8dp" />

        <ImageView
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:visibility="gone"
            android:src="@drawable/im_download" />

        <ImageView
            android:layout_width="@dimen/_29dp"
            android:layout_height="@dimen/_29dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_3dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:visibility="gone"
            android:src="@drawable/ic_load_line"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_itemTemplate_select"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/im_selected"
        android:visibility="gone" />


</RelativeLayout>
