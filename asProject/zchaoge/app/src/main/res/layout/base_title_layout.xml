<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_base_view"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/_48dp">

    <LinearLayout
        android:id="@+id/ll_baseTitle_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingEnd="@dimen/_14dp"
        android:paddingStart="@dimen/_14dp">

        <ImageView
            android:id="@+id/img_baseTitle_back"
            android:layout_width="@dimen/_11dp"
            android:layout_height="@dimen/_17dp"
            android:src="@drawable/ic_back" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_baseTitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorBlack"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_baseTitle_save"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_29dp"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/_15dp"
        android:paddingEnd="@dimen/_15dp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_14dp"
        android:background="@drawable/shape_bg_finish"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/_15sp" />


</RelativeLayout>
