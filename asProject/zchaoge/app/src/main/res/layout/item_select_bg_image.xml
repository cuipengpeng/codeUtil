<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120dp"
    android:layout_height="@dimen/_212dp">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8dp"
        android:background="@color/partingLineBgColor" />

    <com.othershe.library.NiceImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/_110dp"
        android:layout_height="@dimen/_202dp"
        android:layout_below="@id/view1"
        android:scaleType="fitXY"
        app:corner_radius="@dimen/_3dp"
        app:is_circle="false" />

    <com.othershe.library.NiceImageView
        android:id="@+id/img_item_cover"
        android:layout_width="@dimen/_110dp"
        android:layout_height="@dimen/_202dp"
        android:layout_below="@id/view1"
        android:background="#66000000"
        app:corner_radius="@dimen/_3dp"
        app:is_circle="false" />


    <View
        android:layout_width="@dimen/_9dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/partingLineBgColor" />

    <ImageView
        android:id="@+id/img_item_state"
        android:layout_width="@dimen/_21dp"
        android:layout_height="@dimen/_21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_6dp"
        android:layout_marginEnd="@dimen/_14dp" />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_9dp"
        android:visibility="gone"
        android:progressDrawable="@drawable/progressbar1" />


</RelativeLayout>

