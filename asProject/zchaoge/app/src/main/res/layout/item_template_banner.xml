<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_banner_layout"
    android:layout_width="@dimen/_207dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_42dp"
        android:layout_marginTop="@dimen/_42dp"
        app:cardCornerRadius="@dimen/_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.xiao.nicevideoplayer.NiceVideoPlayer
                android:id="@+id/video_banner_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_banner_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/ll_banner_thumb"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_banner_thumb"
                    android:layout_width="@dimen/_37dp"
                    android:layout_height="@dimen/_47dp"
                    android:src="@drawable/ic_play_template" />
            </LinearLayout>


            <ImageView
                android:id="@+id/img_banner_loading"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/im_loading"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_banner_time"
                android:layout_width="@dimen/_49dp"
                android:layout_height="@dimen/_22dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:background="@drawable/shape_bg_text_time"
                android:gravity="center"
                android:text="15S"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
