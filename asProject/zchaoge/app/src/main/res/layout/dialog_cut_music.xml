<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_comment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp">
        <TextView
            android:id="@+id/tv_dialogComment_commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="左右拖动裁取音乐"/>
        <LinearLayout
            android:id="@+id/ll_cutMusicDialog_close"
            android:layout_width="@dimen/_58dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_14dp"
                android:src="@drawable/ic_close" />
        </LinearLayout>
    </RelativeLayout>


    <com.caishi.chaoge.ui.widget.DoubleSlideSeekBar
        android:id="@+id/sb_cutMusicDialog_cutMusic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        custom:equal="1"
        custom:hasRule="false"
        custom:imageLow="@drawable/edit_music_seekbar_thumb"
        custom:imageBig="@drawable/rangseekbar_hint"
        custom:imageheight="45dp"
        custom:imagewidth="15dp"
        custom:lineHeight="40dp"
        custom:inColor="#00000000"
        custom:outColor="#9cC3CBC9"
        custom:ruleColor="#0e0e0e"
        custom:ruleLineHeight="10dp"
        custom:ruleTextColor="#f74104"
        custom:ruleTextSize="6sp"
        custom:textColor="#000000"
        custom:textSize="12sp" />

    <Button
        android:id="@+id/btn_cutMusicDialog_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/shape_main_view"
        android:text="确定并使用"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>