<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.EditTextActivity">

    <View
        android:id="@+id/editText_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <include layout="@layout/base_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="#f5f5f5" />



        <EditText
            android:id="@+id/et_editText_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="start|center_vertical"
            android:hint="输入或粘贴文字"
            android:lineSpacingExtra="@dimen/_10dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingEnd="@dimen/_15dp"
            android:paddingStart="@dimen/_15dp"
            android:paddingTop="@dimen/_10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/describeTextColor"
            android:textSize="@dimen/_32sp"
            android:textStyle="bold" />


</LinearLayout>