<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 选择单位页面 -->
    <include layout="@layout/title_back"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_eeeeee" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_goods_activity_search"/>
        <EditText 
            android:id="@+id/selection_unit_et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入关键字搜索工作单位"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:background="@android:color/transparent"/>
        
    </LinearLayout>
    
    <View style="@style/LineView"/>
    
    <ListView 
        android:id="@+id/selection_unit_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        
    </ListView>
    <ImageView 
        android:id="@+id/selection_unit_iv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_no_data"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:visibility="gone"/>
    

</LinearLayout>
