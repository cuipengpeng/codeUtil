<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_back"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_eeeeee" />

    <include layout="@layout/user_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/myaccountFragment_item_borderColor" />

    <TextView
        android:id="@+id/tv_myaddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/myaccountFragment_item_paddingLeft"
        android:paddingRight="@dimen/myaccountFragment_item_marginRight"
        android:text="我的收货地址"
        android:textColor="#333333"
        android:textSize="@dimen/myaccountFragment_item_textSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/myaccountFragment_item_borderColor" />

    <TextView
        android:id="@+id/tv_modifyLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/myaccountFragment_item_paddingLeft"
        android:paddingRight="@dimen/myaccountFragment_item_marginRight"
        android:text="修改密码"
        android:textColor="#333333"
        android:textSize="@dimen/myaccountFragment_item_textSize" />

    <View
        android:id="@+id/v_orderDetailActivity_border2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orderDetailActivity_border_height"
        android:background="@color/myaccountFragment_item_borderColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/myaccountFragment_item_paddingLeft"
            android:gravity="center"
            android:text="邀请码"
            android:textColor="#333333"
            android:textSize="@dimen/myaccountFragment_item_textSize" />

        <TextView
            android:id="@+id/tv_myAccountFragment_inviteCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:text="..."
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_accountInfoActivity_border_organization"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orderDetailActivity_border_height"
        android:background="@color/myaccountFragment_item_borderColor" />

    <RelativeLayout
        android:id="@+id/rl_accountInfoActivity_organization"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_account_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/myaccountFragment_item_paddingLeft"
            android:gravity="center"
            android:text="所属机构"
            android:textColor="#333333"
            android:textSize="@dimen/myaccountFragment_item_textSize" />

        <TextView
            android:id="@+id/tv_accountInfoActivity_organizationName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_account_text1"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="..."
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/myaccountFragment_item_borderColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/myaccountFragment_item_paddingLeft"
            android:gravity="center"
            android:text="版本号"
            android:textColor="#333333"
            android:textSize="@dimen/myaccountFragment_item_textSize" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_account_text1"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:text="..."
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/myaccountFragment_item_borderColor" />

    <LinearLayout
        android:id="@+id/ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/myaccountFragment_item_paddingLeft"
            android:gravity="center"
            android:text="清除缓存"
            android:textColor="#333333"
            android:textSize="@dimen/myaccountFragment_item_textSize" />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_account_text1"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe8e8e8">

        <Button
            android:id="@+id/btn_accountInfoActivity_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/loginActivity_marginLeftAndRight"
            android:layout_marginRight="@dimen/loginActivity_marginLeftAndRight"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/loginActivity_button_textSize" />
    </RelativeLayout>

</LinearLayout>