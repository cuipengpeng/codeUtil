<?xml version="1.0" encoding="utf-8"?>
<com.jfbank.qualitymarket.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fll_goodinfo"
    style="@style/style_foregroud_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_searchGoodsActivity_orderItem_productImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="2dp"
            android:src="@drawable/load_image_place_holder" />
            <ImageView
                android:id="@+id/iv_searchGoodsActivity_orderItem_zeroProductStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/zero_product_stock"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/tv_searchGoodsActivity_orderItem_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:lineSpacingExtra="5dp"
                    android:lines="2"
                    android:textColor="@color/app_textView_textColor"
                    android:textSize="13sp"
                    tools:text="送我速度多少对方的事发生的收复失地" />

                <TextView
                    android:id="@+id/tv_searchGoodsActivity_orderItem_monthlyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    tools:text="售价：190.00元"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_searchGoodsActivity_orderItem_productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|left"
                        tools:text="月付："
                        android:textColor="@color/app_textView_textColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_searchGoodsActivity_orderItem_monthNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|left"
                        tools:text="分期月数："
                        android:textColor="#999999"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eeeeee"></View>
        </LinearLayout>

    </LinearLayout>


</com.jfbank.qualitymarket.widget.ForegroundLinearLayout>