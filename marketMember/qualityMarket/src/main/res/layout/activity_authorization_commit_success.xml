<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/title_back"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_eeeeee" />

    <!--提示信息-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:background="@drawable/xiao_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="正在审核中，请您耐心等待短信~"
            android:textColor="#333"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00前提交审核，当日完成审核。"
            android:textColor="#999"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00后提交审核，下一工作日完成审核。"
            android:textColor="#999"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_know"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="我知道啦"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:textSize="18sp"/><!-- colorPrimaryDark -->

    <Button
        android:id="@+id/btn_more_authorization"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/button_selector"
        android:text="继续授权获取更多额度"
        android:textColor="#ffffff"
        android:textSize="18sp"/>


</LinearLayout>
