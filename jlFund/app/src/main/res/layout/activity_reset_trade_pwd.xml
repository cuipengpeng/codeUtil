<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="com.jf.jlfund.view.activity.ResetTradePwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.jf.jlfund.weight.CommonTitleBar
            android:id="@+id/commonTitleBar_resetTradePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:statusBarTextColorStyle="dark"
            app:title="重置交易密码" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_reset_trade_pwd_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_idcard" />

            <ImageView
                android:id="@+id/iv_icon_resetTradePwd_clearIDCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/icon_content_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_reset_trade_pwd_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toLeftOf="@id/iv_icon_resetTradePwd_clearIDCard"
                android:layout_toRightOf="@id/iv_icon_reset_trade_pwd_idcard"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="持卡人身份证号"
                android:maxLength="18"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_393b51"
                android:textColorHint="@color/color_b9bbca"
                android:textSize="@dimen/dp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignLeft="@id/et_reset_trade_pwd_idcard"
                android:layout_alignParentBottom="true"
                android:background="@color/color_ebebeb" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_reset_trade_pwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/tv_reset_trade_pwd_getCheckCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_reset_trade_pwd_phone"
                android:layout_alignBottom="@+id/et_reset_trade_pwd_phone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp5"
                android:text="获取验证码"
                android:textColor="@color/color_0084ff"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:id="@+id/iv_icon_resetTradePwd_clearPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@id/tv_reset_trade_pwd_getCheckCode"
                android:src="@drawable/icon_content_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_reset_trade_pwd_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toLeftOf="@id/iv_icon_resetTradePwd_clearPhone"
                android:layout_toRightOf="@id/iv_reset_trade_pwd_phone"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="登录手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_393b51"
                android:textColorHint="@color/color_b9bbca"
                android:textSize="@dimen/dp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignLeft="@id/et_reset_trade_pwd_phone"
                android:layout_alignParentBottom="true"
                android:background="@color/color_ebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_reset_trade_pwd_check_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_check_code" />

            <ImageView
                android:id="@+id/iv_icon_resetTradePwd_clearCheckCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/icon_content_clear"
                android:visibility="gone" />


            <EditText
                android:id="@+id/et_reset_trade_pwd_checkCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toLeftOf="@id/iv_icon_resetTradePwd_clearCheckCode"
                android:layout_toRightOf="@id/iv_icon_reset_trade_pwd_check_code"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入6位验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_393b51"
                android:textColorHint="@color/color_b9bbca"
                android:textSize="@dimen/dp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignLeft="@id/et_reset_trade_pwd_checkCode"
                android:layout_alignParentBottom="true"
                android:background="@color/color_ebebeb" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20">

            <ImageView
                android:id="@+id/iv_icon_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_password" />

            <ImageView
                android:id="@+id/iv_reset_trade_pwd_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp5"
                android:src="@drawable/selector_eyes"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_reset_trade_pwd_clear_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp15"
                android:layout_toLeftOf="@id/iv_reset_trade_pwd_eyes"
                android:padding="@dimen/dp5"
                android:src="@drawable/icon_content_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_reset_trade_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toLeftOf="@id/iv_reset_trade_pwd_clear_pwd"
                android:layout_toRightOf="@id/iv_icon_password"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入新的交易密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_393b51"
                android:textColorHint="@color/color_b9bbca"
                android:textSize="@dimen/dp16" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignLeft="@id/et_reset_trade_pwd"
                android:layout_alignParentBottom="true"
                android:background="@color/color_ebebeb" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_reset_trade_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp36"
            android:layout_marginRight="@dimen/dp36"
            android:layout_marginTop="@dimen/dp50"
            android:background="@drawable/selector_btn_clickable_unclickable"
            android:gravity="center"
            android:inputType="number"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:text="完成"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp18" />
    </LinearLayout>
</ScrollView>
