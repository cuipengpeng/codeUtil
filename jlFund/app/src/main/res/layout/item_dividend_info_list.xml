<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dividendInfoActivity_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
    android:paddingRight="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_dividendInfoActivity_item_rightRegisterDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_marginTop="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_weight="4"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appTitleColor"
        android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />

    <TextView
        android:id="@+id/tv_dividendInfoActivity_item_dividendProvideDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_marginTop="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_weight="4"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appTitleColor"
        android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />

    <TextView
        android:id="@+id/tv_dividendInfoActivity_item_unitDividend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_marginTop="@dimen/dividendInfoActivity_item_marginTopAndBottom_18dp"
        android:layout_weight="3"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appRedColor"
        android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />
</LinearLayout>
