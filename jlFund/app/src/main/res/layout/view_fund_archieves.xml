<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_singleFundDetailActivity_archivesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/singleFundDetailActivity_pageMarginLeftAndRight_15dp"
        android:paddingRight="@dimen/singleFundDetailActivity_pageMarginLeftAndRight_15dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_singleFundDetailActivity_fundInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_fundInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="基金信息"
                android:textColor="@color/appTitleColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_fundAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_singleFundDetailActivity_fundInfo"
                android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="基金规模"
                android:textColor="@color/appContentColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_setupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_singleFundDetailActivity_fundAmount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="成立时间"
                android:textColor="@color/appContentColor"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/fundInfoActivity_textView_marginTopAndBottom_18dp"
                android:layout_marginTop="@dimen/fundInfoActivity_textView_marginTopAndBottom_18dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/fundInfoActivityGray"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerView_height_1dp"
            android:background="@color/fundInfoActivity_dividerColor" />

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_positionAllocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="持仓配置"
                android:textColor="@color/fundInfoActivityBlack"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_positionAllocationValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/fundInfoActivityGray"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerView_height_1dp"
            android:background="@color/fundInfoActivity_dividerColor" />

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_fundManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="基金经理"
                android:textColor="@color/fundInfoActivityBlack"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_fundManagerValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/app_rightArrow_paddingRight_4dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/fundInfoActivityGray"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerView_height_1dp"
            android:background="@color/fundInfoActivity_dividerColor" />

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_fundCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="基金公司"
                android:textColor="@color/fundInfoActivityBlack"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_fundCompanyValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/app_rightArrow_paddingRight_4dp"
                android:ellipsize="end"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/fundInfoActivityGray"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
        </LinearLayout>

        <View
            android:id="@+id/v_singleFundDetailActivity_tradeNoticeDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerView_height_1dp"
            android:background="@color/fundInfoActivity_dividerColor" />

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_tradeNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="交易须知"
                android:textColor="@color/fundInfoActivityBlack"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />

            <TextView
                android:id="@+id/tv_singleFundDetailActivity_tradeNoticeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/app_rightArrow_paddingRight_4dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/fundInfoActivityGray"
                android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
        </LinearLayout>
</LinearLayout>
