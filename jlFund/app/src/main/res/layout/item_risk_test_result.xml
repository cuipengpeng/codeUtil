<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_riskTestResultActivity_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_riskTestResultActivity_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:text=""
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

        <TextView
            android:id="@+id/tv_riskTestResultActivity_item_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_riskTestResultActivity_item_title"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appContentColor"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/fundInfoActivity_textView_marginTopAndBottom_18dp"
            android:layout_marginTop="@dimen/fundInfoActivity_textView_marginTopAndBottom_18dp"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/fundInfoActivityGray"
            android:textSize="@dimen/fundInfoActivity_textSize_15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_riskTestResultActivity_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_ebebeb" />

</LinearLayout>