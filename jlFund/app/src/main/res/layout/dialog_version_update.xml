<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp15"
    app:cardMaxElevation="@dimen/dp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_version_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:text="更新内容"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_dialogVersionUpdate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="8"
            android:textColor="@color/color_7e819b"
            android:textSize="@dimen/dp13" />

        <com.jf.jlfund.weight.dialog.CustomProgressBar
            android:id="@+id/progressBar_dialogVersionUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp5"
            android:background="@drawable/line_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialogVersionUpdate_updateLater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp15"
                android:text="稍后再说"
                android:textColor="@color/color_b9bbca"
                android:textSize="@dimen/dp15"
                android:translationZ="-10dp" />

            <View
                android:id="@+id/v_split_dialogVersionUpdate"
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <TextView
                android:id="@+id/tv_dialogVersionUpdate_updateNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp15"
                android:text="马上更新"
                android:textColor="@color/color_0084ff"
                android:textSize="@dimen/dp15"
                android:translationZ="-10dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>