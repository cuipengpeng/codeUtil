<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#ffffff"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_putInResultActivity_tradeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appTitleColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_putInResultActivity_tradeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_putInResultActivity_tradeType"
            android:layout_marginBottom="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
            android:layout_marginTop="10dp"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appCommentColor"
            android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_putInResultActivity_tradeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appTitleColor"
        android:textSize="16sp" />

</RelativeLayout>
