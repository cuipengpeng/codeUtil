<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp40"
            android:background="@drawable/icon_risk_nocheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp40"
            android:background="@color/color_f9f9f9"
            android:padding="@dimen/dp20"
            android:text="@string/riskEvaluationDeclare"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp15" />

        <TextView
            android:id="@+id/tv_beganRiskEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp36"
            android:layout_marginRight="@dimen/dp36"
            android:layout_marginTop="@dimen/dp50"
            android:background="@drawable/selector_btn_clickable_unclickable"
            android:gravity="center"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:text="开始风险测评"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp18" />
    </LinearLayout>
</ScrollView>