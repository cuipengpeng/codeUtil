<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/bg_radius15_f9f9f9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_holderFundHold_fundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="易方达中小盘混合"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@color/color_ebebeb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <LinearLayout
                android:id="@+id/ll_holderFundHold_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:textColor="@color/color_7e819b"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_holderFundHold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="500.00"
                    android:textColor="@color/color_393b51"
                    android:textSize="@dimen/dp15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昨日收益"
                    android:textColor="@color/color_7e819b"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_holderFundHold_yesterdayIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="-10.20"
                    android:textColor="@color/color_f35857"
                    android:textSize="@dimen/dp15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益"
                    android:textColor="@color/color_7e819b"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_holderFundHold_totalIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="+100.20"
                    android:textColor="@color/color_f35857"
                    android:textSize="@dimen/dp15" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_holderFundHold_bottomTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_holderFundHold_left"
                android:layout_marginTop="@dimen/dp15"
                android:background="@color/color_f5f5f5"
                android:drawableLeft="@drawable/icon_fund_attention"
                android:drawablePadding="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:paddingTop="@dimen/dp8"
                android:textColor="@color/color_393b51"
                android:textSize="@dimen/dp12" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>