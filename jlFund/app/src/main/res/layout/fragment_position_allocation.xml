<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/sv_positionAllocationFragment_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_positionAllocationFragment_pieChartAndPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_marginLeftAndRight_15dp"
                android:background="@color/color_ffffff">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">

                </com.github.mikephil.charting.charts.PieChart>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pieChart"
                    android:background="@color/color_ffffff"
                    android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff">

                    <View
                        android:id="@+id/tv_positionAllocationFragment_stockCircleIconOfPieChart"
                        android:layout_width="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_height="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_radius7_red" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_stockNameOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_15dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_stockCircleIconOfPieChart"
                        android:text="股票"
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_stockPercentOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_10dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_stockNameOfPieChart"
                        android:text=""
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_ffffff">

                    <View
                        android:id="@+id/tv_positionAllocationFragment_bondCircleIconOfPieChart"
                        android:layout_width="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_height="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_radius7_0084ff" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_bondNameOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_15dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_bondCircleIconOfPieChart"
                        android:text="债券"
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_bondPercentOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_10dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_bondNameOfPieChart"
                        android:text=""
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_ffffff">

                    <View
                        android:id="@+id/tv_positionAllocationFragment_cashCircleIconOfPieChart"
                        android:layout_width="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_height="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_radius7_ff963b" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_cashNameOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_15dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_cashCircleIconOfPieChart"
                        android:text="现金"
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_cashPercentOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_10dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_cashNameOfPieChart"
                        android:text=""
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_ffffff">

                    <View
                        android:id="@+id/tv_positionAllocationFragment_otherCircleIconOfPieChart"
                        android:layout_width="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_height="@dimen/singleFundDetailActivity_circleRadius_7dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_radius7_ae87fa" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_otherNameOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_15dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_otherCircleIconOfPieChart"
                        android:text="其他"
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                    <TextView
                        android:id="@+id/tv_positionAllocationFragment_otherPercentOfPieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/positionAllocationFragment_textViewOfPieChartMarginLeft_10dp"
                        android:layout_toRightOf="@id/tv_positionAllocationFragment_otherNameOfPieChart"
                        android:text=""
                        android:textColor="@color/appContentColor"
                        android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

                </RelativeLayout>
            </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_positionAllocationFragment_stockTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appBackgroundColor">

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_stockKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="股票"
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />


                <ImageView
                    android:id="@+id/iv_positionAllocationFragment_stockArrow"
                    android:layout_width="@dimen/positionAllocationFragment_arrowWidthAndHeight_14dp"
                    android:layout_height="@dimen/positionAllocationFragment_arrowWidthAndHeight_8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:background="@mipmap/arrow_down"/>

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_stockPercentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@id/iv_positionAllocationFragment_stockArrow"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_positionAllocationFragment_stockKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="重仓股票"
                    android:textColor="@color/appContentColor"
                    android:textSize="@dimen/positionAllocationFragment_contentTextSize_13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_marginRight="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text="占净值比例"
                    android:textColor="@color/appContentColor"
                    android:textSize="@dimen/positionAllocationFragment_contentTextSize_13sp" />
            </LinearLayout>

            <View
                android:id="@+id/v_positionAllocationFragment_stockDivideLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerView_height_1dp"
                android:background="@color/fundInfoActivity_dividerColor" />
            <com.jf.jlfund.weight.NoScrollRecycleView
                android:id="@+id/rv_positionAllocationFragment_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerView_height_1dp"
                android:background="#ffffff" />
            <RelativeLayout
                android:id="@+id/rl_positionAllocationFragment_bondTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appBackgroundColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_bondKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="债券"
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />

                <ImageView
                    android:id="@+id/iv_positionAllocationFragment_bondArrow"
                    android:layout_width="@dimen/positionAllocationFragment_arrowWidthAndHeight_14dp"
                    android:layout_height="@dimen/positionAllocationFragment_arrowWidthAndHeight_8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:background="@mipmap/arrow_down"/>

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_bondPercentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_positionAllocationFragment_bondArrow"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_positionAllocationFragment_bondKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="重仓债券"
                    android:textColor="@color/appContentColor"
                    android:textSize="@dimen/positionAllocationFragment_contentTextSize_13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_marginRight="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text="占净值比例"
                    android:textColor="@color/appContentColor"
                    android:textSize="@dimen/positionAllocationFragment_contentTextSize_13sp" />
            </LinearLayout>

            <View
                android:id="@+id/v_positionAllocationFragment_bondDivideLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerView_height_1dp"
                android:background="@color/fundInfoActivity_dividerColor" />

            <com.jf.jlfund.weight.NoScrollRecycleView
                android:id="@+id/rv_positionAllocationFragment_bond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerView_height_1dp"
                android:background="#ffffff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appBackgroundColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_cashKey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="现金"
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_cashPercentValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividerView_height_1dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appBackgroundColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_otherKey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="其他"
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />

                <TextView
                    android:id="@+id/tv_positionAllocationFragment_otherPercentValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="@dimen/positionAllocationFragment_titleMarginTopAndBottom_12dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/appTitleColor"
                    android:textSize="@dimen/positionAllocationFragment_titleTextSize_15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/list_no_data_view"
        android:visibility="gone" />
</RelativeLayout>
