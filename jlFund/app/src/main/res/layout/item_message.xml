<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp20"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15"
    android:paddingTop="@dimen/dp15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_message_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="基金买入受理成功"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp16" />

        <TextView
            android:id="@+id/tv_item_message_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_item_message_title_right"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="长信量化先锋混合"
            android:textColor="@color/color_0084ff"
            android:textSize="@dimen/dp16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2017-02-27 12:09"
        android:textColor="@color/color_b9bbca"
        android:textSize="@dimen/dp11" />

    <TextView
        android:id="@+id/tv_item_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp13"
        android:text="您于2017年1月2日购买的1,000.00元长信量化先锋混合已经确认成功，确认金额为999.00元，手续费为1.00元"
        android:textColor="@color/color_7e819b"
        android:textSize="@dimen/dp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/color_ebebeb" />

    <TextView
        android:id="@+id/tv_item_message_showMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp15"
        android:paddingTop="@dimen/dp15"
        android:text="查看详情"
        android:textColor="@color/color_393b51"
        android:textSize="@dimen/dp14" />

</LinearLayout>