<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius25_ffffff"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp15">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/icon_finger" />


    <TextView
        android:id="@+id/tv_dialogFingerCheck_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="再试一次"
        android:textColor="@color/color_393b51"
        android:textSize="@dimen/dp15"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dialogFingerCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp8"
        android:text="通过验证手机已有指纹解锁"
        android:textColor="@color/color_393b51" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_ebebeb" />

    <TextView
        android:id="@+id/tv_dialogFingerCheck_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp15"
        android:text="取消"
        android:textColor="@color/color_0084ff"
        android:textStyle="bold" />
</LinearLayout>