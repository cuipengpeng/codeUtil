<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_optionalFragment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
    android:paddingRight="@dimen/fundCompanyActivity_marginLeftAndRight_15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_optionalFragment_item_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
                android:background="@mipmap/optional_fund_item_del"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_optionalFragment_item_fundName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
                android:layout_marginTop="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/appTitleColor"
                android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_optionalFragment_item_fundType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
            android:layout_marginTop="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
            android:layout_weight="5"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />

        <TextView
            android:id="@+id/tv_optionalFragment_item_fundYield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
            android:layout_marginTop="@dimen/fundCompanyActivity_textView_marginTopAndBottom_15dp"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appRedColor"
            android:textSize="@dimen/fundCompanyActivity_item_textSize_14sp" />
    </LinearLayout>
</LinearLayout>
