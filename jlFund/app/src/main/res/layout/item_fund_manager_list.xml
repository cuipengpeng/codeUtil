<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fundManagerListActivity_item_manager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_marginLeftAndRight_10dp"
    android:layout_marginRight="@dimen/activity_marginLeftAndRight_10dp"
    android:orientation="vertical">

    <com.jf.jlfund.weight.CircleImageView
        android:id="@+id/iv_fundManagerListActivity_item_managerImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/manager_image"/>

    <TextView
        android:id="@+id/tv_fundManagerListActivity_item_managerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fundManagerListActivity_item_managerImage"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:gravity="left|center_vertical"
        android:text=""
        android:textColor="@color/appTitleColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_fundManagerListActivity_item_managerWorkingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fundManagerListActivity_item_managerName"
        android:layout_alignLeft="@id/tv_fundManagerListActivity_item_managerName"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appCommentColor"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_fundManagerListActivity_item_dividerLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerView_height_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerLineColor_1dp"/>
</RelativeLayout>
