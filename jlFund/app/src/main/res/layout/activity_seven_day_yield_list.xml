<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sevenDayYieldListActivity_yieldKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
        android:layout_marginTop="25dp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/currentPlusActivityGold"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_sevenDayYieldListActivity_yieldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dividendInfoActivity_textView_marginTopAndBottom_15dp"
        android:layout_marginLeft="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
        android:layout_marginTop="@dimen/dividendInfoActivity_textView_marginTopAndBottom_15dp"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/currentPlusActivityGold"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_sevenDayYieldListActivity_yieldDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/dividendInfoActivity_textView_marginTopAndBottom_15dp"
        android:paddingLeft="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
        android:paddingRight="@dimen/fundCompanyActivity_marginLeftAndRight_15dp"
        android:paddingTop="@dimen/dividendInfoActivity_textView_marginTopAndBottom_15dp"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:background="#f9f9f9"
        android:text="节假日不更新收益，节假日后第一个交易日更新的收益中体现节假日收益。"
        android:textColor="@color/appContentColor"
        android:textSize="13sp"/>

    <com.jf.jlfund.weight.refreshlayout.AutoLoadMoreRecyclerView
        android:id="@+id/rv_sevenDayYieldListActivity_yieldList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.jf.jlfund.weight.refreshlayout.AutoLoadMoreRecyclerView
        android:id="@+id/rv_sevenDayYieldListActivity_wanfenIncomeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.jf.jlfund.weight.refreshlayout.AutoLoadMoreRecyclerView
        android:id="@+id/rv_sevenDayYieldListActivity_accumulatedList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        layout="@layout/list_no_data_view"
        android:visibility="gone" />
</LinearLayout>
