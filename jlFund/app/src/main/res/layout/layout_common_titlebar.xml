<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ctb_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_ctb_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5">

        <TextView
            android:id="@+id/tv_ctb_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:drawableLeft="@drawable/icon_back"
            android:padding="@dimen/dp7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ctb_primarytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:text="zzzz"
                android:textColor="@color/color_393b51"
                android:textSize="@dimen/dp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ctb_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text="110028"
                android:textColor="@color/color_393b51"
                android:textSize="@dimen/dp10" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ctb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:drawableRight="@drawable/icon_search_common_title"
            android:padding="@dimen/dp5"
            android:textColor="@color/color_0084ff"
            android:textSize="@dimen/dp15" />

    </RelativeLayout>
</RelativeLayout>
