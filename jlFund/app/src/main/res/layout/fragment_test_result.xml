<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp10"
    app:cardElevation="@dimen/dp5"
    tools:context="com.jf.jlfund.view.fragment.TestResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_test_result"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <TextView
            android:id="@+id/tv_fragmentTestResult_fundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中欧价值发现"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp28"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentTestResult_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/color_ff6600"
                android:textSize="@dimen/dp45"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fragmentTestResult_percentTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/color_ff6600"
                android:textSize="@dimen/dp30"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="近三年年化收益"
            android:textColor="@color/color_b9bbca"
            android:textSize="@dimen/dp13" />

        <RelativeLayout
            android:id="@+id/rl_fragmentTestResult_LineStar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_fragmentTestResult_star"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_fragmentTestResult_star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_test_result_star" />

                    <ImageView
                        android:id="@+id/iv_fragmentTestResult_star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@drawable/selector_test_result_star" />

                    <ImageView
                        android:id="@+id/iv_fragmentTestResult_star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@drawable/selector_test_result_star" />

                    <ImageView
                        android:id="@+id/iv_fragmentTestResult_star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@drawable/selector_test_result_star" />

                    <ImageView
                        android:id="@+id/iv_fragmentTestResult_star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@drawable/selector_test_result_star" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="机构评级"
                    android:textColor="@color/color_b9bbca"
                    android:textSize="@dimen/dp13" />

            </LinearLayout>

            <View
                android:id="@+id/v_fragmentTestResult_s1"
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/color_ebebeb" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_toRightOf="@id/v_fragmentTestResult_s1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragmentTestResult_antiRiskAbility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="强"
                    android:textColor="@color/color_393b51"
                    android:textSize="@dimen/dp23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="抗风险能力"
                    android:textColor="@color/color_b9bbca"
                    android:textSize="@dimen/dp13" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fragmentTestResult_LineStable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragmentTestResult_stable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中高"
                    android:textColor="@color/color_393b51"
                    android:textSize="@dimen/dp23"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="业绩稳定性"
                    android:textColor="@color/color_b9bbca"
                    android:textSize="@dimen/dp13" />

            </LinearLayout>

            <View
                android:id="@+id/v_fragmentTestResult_s2"
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/color_ebebeb" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_toRightOf="@id/v_fragmentTestResult_s2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragmentTestResult_orgPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高"
                    android:textColor="@color/color_393b51"
                    android:textSize="@dimen/dp23"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="机构持仓"
                    android:textColor="@color/color_b9bbca"
                    android:textSize="@dimen/dp13" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_fragmentTestResult_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius30_f5f5f5"
                android:paddingBottom="@dimen/dp8"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp8"
                android:text="固收利器"
                android:textColor="@color/color_7e819b"
                android:textSize="@dimen/dp12" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/bg_radius30_f5f5f5"
                android:paddingBottom="@dimen/dp8"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp8"
                android:text="牛人经理"
                android:textColor="@color/color_7e819b"
                android:textSize="@dimen/dp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/bg_radius30_f5f5f5"
                android:paddingBottom="@dimen/dp8"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp8"
                android:text="价值投资"
                android:textColor="@color/color_7e819b"
                android:textSize="@dimen/dp12" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="个性化标签"
            android:textColor="@color/color_b9bbca"
            android:textSize="@dimen/dp13" />
    </LinearLayout>

</android.support.v7.widget.CardView>
