<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonTitleBar">
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="leftTxt" format="string" />
        <attr name="leftBg" format="reference" />
        <attr name="rightTxt" format="string" />
        <attr name="rightBg" format="reference" />
        <attr name="backgroudResource" format="reference" />    <!--背景资源-->
        <attr name="statusBarBGColor" format="color" />  <!-- 状态栏颜色 -->
        <attr name="primaryTitleTextColor" format="color" />

        <attr name="statusBarTextColorStyle" format="enum"> <!-- 状态栏字体和图标的颜色风格-->
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
        </attr>

        <attr name="isTranslucentStatusBar" format="boolean" /> <!--状态栏是否透明-->

        <!--左边按钮动作-->
        <attr name="leftAction" format="enum">
            <enum name="back" value="0" />   <!--返回上一页-->
            <enum name="search" value="1" /> <!--进入搜索页面-->
        </attr>

        <!--右1按钮动作-->
        <attr name="rightAction" format="enum">
            <enum name="none" value="0" />    <!-- 默认无-->
            <enum name="search" value="1" />   <!-- 点击进入搜索页面 -->
        </attr>

        <!--显示与隐藏-->
        <attr name="pattern" format="enum">
            <enum name="leftOnly" value="100" />    <!--只显示返回箭头-->
            <enum name="titleWithLeftImg" value="110" /> <!-- 默认：显示标题和左边图标-->
            <enum name="titleWithLeftTxt" value="111" /> <!-- 显示标题和左边文字 -->
            <enum name="titleWithRightImg" value="112" /> <!-- 显示标题和右图标-->
            <enum name="titleWithRightTxt" value="113" /> <!-- 显示标题和右文字-->

            <enum name="titleWithTwoImg" value="120" />   <!-- 显示标题和左右图标-->
            <enum name="titleWithTwoText" value="121" /> <!--显示标题和左右文字-->

            <enum name="titleWithLeftImgRightTxt" value="130" /> <!--标题、左图标，右文字-->
            <enum name="titleWithLeftTxtRightImg" value="131" /> <!--标题、左文字 右图标-->

            <enum name="doubleTitleWithLeftImgAndRightTxt" value="140" />   <!--左按钮、右文字，中间上下两个标题【主标题和副标题】-->
        </attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="width_space" format="dimension" />
        <attr name="height_space" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="offColor" format="color" />
        <attr name="offColorDark" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="ratioAspect" format="float" />
        <attr name="isOpened" format="boolean" />
    </declare-styleable>

</resources>