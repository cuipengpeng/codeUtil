<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_y_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:text=""
            android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        <View
            android:id="@+id/v_dividerLine1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_toRightOf="@id/tv_y_1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ebebeb" />

        <TextView
            android:id="@+id/tv_y_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_1"
            android:layout_marginTop="@dimen/currentPlusActivity_chartYAxisMarginTop_40dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        <View
            android:id="@+id/v_dividerLine2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_toRightOf="@id/tv_y_2"
            android:layout_below="@id/tv_y_1"
            android:layout_marginTop="@dimen/currentPlusActivity_chartDividerLineMarginTop_46dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ebebeb" />

        <TextView
            android:id="@+id/tv_y_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_2"
            android:layout_marginTop="@dimen/currentPlusActivity_chartYAxisMarginTop_40dp"
            android:text=""
            android:gravity="left|center_vertical"
            android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        <View
            android:id="@+id/v_dividerLine3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_toRightOf="@id/tv_y_3"
            android:layout_below="@id/tv_y_2"
            android:layout_marginTop="@dimen/currentPlusActivity_chartDividerLineMarginTop_46dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ebebeb" />

        <TextView
            android:id="@+id/tv_y_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_3"
            android:layout_marginTop="@dimen/currentPlusActivity_chartYAxisMarginTop_40dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        <View
            android:id="@+id/v_dividerLine4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_toRightOf="@id/tv_y_4"
            android:layout_below="@id/tv_y_3"
            android:layout_marginTop="@dimen/currentPlusActivity_chartDividerLineMarginTop_46dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ebebeb" />

        <TextView
            android:id="@+id/tv_y_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_4"
            android:layout_marginTop="@dimen/currentPlusActivity_chartYAxisMarginTop_40dp"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        <View
            android:id="@+id/v_dividerLine5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_toRightOf="@id/tv_y_5"
            android:layout_below="@id/tv_y_4"
            android:layout_marginTop="@dimen/currentPlusActivity_chartDividerLineMarginTop_46dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ebebeb" />


        <LinearLayout
            android:id="@+id/ll_currentPlusActivity_chart_xaxis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_below="@id/tv_y_5"
            android:layout_alignLeft="@id/v_dividerLine5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_x_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />
            <TextView
                android:id="@+id/tv_x_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/currentPlusActivity_chartTextSize_10sp" />

        </LinearLayout>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/holder_lineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_y_1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_above="@id/ll_currentPlusActivity_chart_xaxis"
            android:layout_below="@id/v_dividerLine1"/>

    </RelativeLayout>


</LinearLayout>