<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:id="@+id/ll_holder_bgfd_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_buy_good_fund_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:maxLines="1"
                android:textColor="@color/color_f35857"
                android:textSize="@dimen/dp24" />

            <TextView
                android:id="@+id/tv_item_buy_good_fund_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:maxLines="1"
                android:text="三个月"
                android:textColor="@color/color_7e819b"
                android:textSize="@dimen/dp13" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:background="@color/color_ebebeb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp15">

            <TextView
                android:id="@+id/tv_item_buy_good_fund_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:maxLines="1"
                android:text="嘉实新消费行业"
                android:textColor="@color/color_393b51"
                android:textSize="@dimen/dp16" />

            <TextView
                android:id="@+id/tv_item_buy_good_fund_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:maxLines="1"
                android:text="领跑大盘"
                android:textColor="@color/color_7e819b"
                android:textSize="@dimen/dp14" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_bgfd_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_holder_bgfd_content"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_marginRight="@dimen/dp36"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/selector_btn_clickable_unclickable"
        android:gravity="center"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:text="立即购买"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dp15"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@id/tv_item_bgfd_buy_now"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/color_ebebeb" />


</RelativeLayout>