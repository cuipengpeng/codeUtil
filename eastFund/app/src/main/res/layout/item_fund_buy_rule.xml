<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
        android:paddingRight="@dimen/positionAllocationFragment_marginLeftAndRight_15dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_positionAllocationFragment_item_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
            android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />

        <TextView
            android:id="@+id/tv_positionAllocationFragment_item_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
            android:layout_marginTop="@dimen/positionAllocationFragment_contentMarginTopAndBottom_15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/positionAllocationFragment_listTextSize_14sp" />
    </LinearLayout>

    <View
        android:id="@+id/tv_positionAllocationFragment_item_dividerLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerView_height_1dp"
        android:background="@color/fundInfoActivity_dividerColor" />


</LinearLayout>