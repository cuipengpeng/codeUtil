<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fundAnnouncementListActivity_item_announcement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/singleFundDetailActivity_pageMarginLeftAndRight_15dp"
    android:layout_marginRight="@dimen/singleFundDetailActivity_pageMarginLeftAndRight_15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fundAnnouncementListActivity_item_announcementContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/appTitleColor"
        android:textSize="@dimen/fundCompanyActivity_textSize_13sp" />

    <TextView
        android:id="@+id/tv_fundAnnouncementListActivity_item_announcementDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/appCommentColor"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_fundAnnouncementListActivity_item_dividerLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerView_height_1dp"
        android:background="@color/dividerLineColor_1dp"/>
</LinearLayout>
