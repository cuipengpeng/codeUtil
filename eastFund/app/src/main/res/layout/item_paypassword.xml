<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pay_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_title"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="输入交易密码"
                android:textColor="@color/appTitleColor"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_closeDialog"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleType="center"
                android:src="@mipmap/ic_delete_gray" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ebebeb" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/table_background"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box1"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box2"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box3"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box4"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box5"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_box6"
                    android:layout_width="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_height="@dimen/payPasswordPoint_widthAndHeight_10dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mima_yuandian"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_confirmOrderActivity_forgetOneCardTradePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:gravity="center"
            android:text="忘记密码?"
            android:textColor="@color/appViewFullTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/gray_color2"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray_color2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pay_keyboard_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="1"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="2"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="3"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pay_keyboard_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="4"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="5"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="6"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="7"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="8"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />


            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="9"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pay_keyboard_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/keyboard_del_selector" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />

            <TextView
                android:id="@+id/pay_keyboard_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="0"
                android:textColor="#353535"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_color2" />


            <RelativeLayout
                android:id="@+id/pay_keyboard_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_ffffff">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_trade_pwd_del" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_itemPayPwd_gif"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/color_f5f5f5"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_itemPayPassword_gif"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp90"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp40" />

        <TextView
            android:id="@+id/tv_itemPayPassword_bankcardResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_itemPayPassword_gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp15"
            android:text="绑卡成功"
            android:textColor="@color/color_393b51"
            android:textSize="@dimen/dp15"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>