<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="提交买入"
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认份额"
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="查看收益"
            android:textColor="@color/appTitleColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_redCircle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/appRedColor" />

            <ImageView
                android:layout_width="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
                android:layout_height="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/red_circle" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_singleFundDetailActivity_redCircle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
                android:layout_height="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/red_circle" />

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/appRedColor" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_singleFundDetailActivity_redCircle2"
            android:layout_width="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
            android:layout_height="@dimen/fundBuyRuleView_redCircleHeightAndWidth_15dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/red_circle" />

        <View
            android:id="@+id/v_singleFundDetailActivity_redline2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ll_singleFundDetailActivity_redCircle1"
            android:layout_toLeftOf="@id/iv_singleFundDetailActivity_redCircle2"
            android:background="@color/appRedColor" />


        <View
            android:id="@+id/v_singleFundDetailActivity_redline3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_singleFundDetailActivity_redCircle2"
            android:layout_toLeftOf="@id/ll_singleFundDetailActivity_redCircle3"
            android:background="@color/appRedColor" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_singleFundDetailActivity_tradeRule1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text=""
            android:textColor="@color/appContentColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_11sp" />

        <TextView
            android:id="@+id/tv_singleFundDetailActivity_tradeRule2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/appContentColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_11sp" />

        <TextView
            android:id="@+id/tv_singleFundDetailActivity_tradeRule3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text=""
            android:textColor="@color/appContentColor"
            android:textSize="@dimen/singleFundDetailActivity_tradeRuleTextSize_11sp" />
    </LinearLayout>
</LinearLayout>
