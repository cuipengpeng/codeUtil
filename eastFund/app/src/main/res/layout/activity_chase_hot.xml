    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.bank.view.activity.ChaseHotActivity">

    <com.test.bank.weight.CommonTitleBar
        android:id="@+id/commonTitleBar_chaseHot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:statusBarTextColorStyle="dark"
        app:title="追热点" />

    <com.test.bank.weight.refreshlayout.AutoLoadMoreRecyclerView
        android:id="@+id/recyclerView_chaseHot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
