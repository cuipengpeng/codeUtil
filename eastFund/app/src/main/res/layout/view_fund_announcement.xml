<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_singleFundDetailActivity_announcementList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_singleFundDetailActivity_announcementList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_singleFundDetailActivity_viewMore"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLines="1"
            android:text="查看更多"
            android:textColor="#0084ff"
            android:textSize="@dimen/singleFundDetailActivity_buyFlowContentTextSize_13sp" />
</LinearLayout>
