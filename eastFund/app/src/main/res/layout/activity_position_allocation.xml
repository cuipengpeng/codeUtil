<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_positionAllocationActivity_positionAllocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_positionAllocationActivity_positionAllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="持仓配置"
                android:textColor="@color/appCommentColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <View
                android:id="@+id/v_positionAllocationActivity_positionAllocationRedLine"
                android:layout_width="15dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_f35857" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_positionAllocationActivity_industryDistribution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_positionAllocationActivity_industryDistribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="行业分布"
                android:textColor="@color/appCommentColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <View
                android:id="@+id/v_positionAllocationActivity_industryDistributionRedLine"
                android:layout_width="15dp"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_f35857" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_view_height_1dp" />

    <LinearLayout
        android:id="@+id/ll_positionAllocationActivity_contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>