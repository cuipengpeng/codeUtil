<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_tradeRecordListActivity_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tradeRecordListActivity_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="全部"
                android:textColor="@color/appCommentColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <View
                android:id="@+id/v_tradeRecordListActivity_allRedLine"
                android:layout_width="17dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/currentPlusActivityGold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tradeRecordListActivity_putIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tradeRecordListActivity_putIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="存入"
                android:textColor="@color/appCommentColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <View
                android:id="@+id/v_tradeRecordListActivity_putInRedLine"
                android:layout_width="17dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/currentPlusActivityGold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tradeRecordListActivity_getOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tradeRecordListActivity_getOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/singleFundDetailActivity_itemMarginTopAndBottom_15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="取出"
                android:textColor="@color/appCommentColor"
                android:textSize="@dimen/singleFundDetailActivity_titleItemTextSize_15sp" />

            <View
                android:id="@+id/v_tradeRecordListActivity_getOutRedLine"
                android:layout_width="17dp"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/currentPlusActivityGold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tradeRecordListActivity_contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>