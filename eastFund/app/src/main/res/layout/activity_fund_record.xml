<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.bank.view.activity.FundTradeRecordActivity">

    <com.test.bank.weight.CommonTitleBar
        android:id="@+id/commonTitleBar_fundRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:statusBarTextColorStyle="dark"
        app:title="基金记录" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fundRecord_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp15"
            android:text="全部"
            android:textColor="@color/color_f35857"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fundRecord_processing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp15"
            android:text="进行中"
            android:textColor="@color/color_b9bbca"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view_fundRecord_bottom"
        android:layout_width="@dimen/dp17"
        android:layout_height="@dimen/dp3"
        android:background="@color/color_f35857" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_fundRecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
